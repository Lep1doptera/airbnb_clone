<div class="container my-5">
  <div class="row">

    <div class="col-md-8">
      <div class="mb-4">
        <%= image_tag @property.property_image_url, class: "img-fluid rounded shadow-sm w-100", style: "height: 480px; object-fit: cover"%>
      </div>

      <div class="bg-light p-4 shadow-sm rounded">
        <h4><%= @property.property_address %></h4>
        <p class="mb-0">
          <i class="fa-solid fa-user-group"></i> <%= @property.number_of_guests %> guests
          &nbsp;&nbsp;
          <i class="fa-solid fa-dollar-sign"></i> <%= @property.price_per_night %> per night
        </p>
        <p class="mt-3"><%= @property.description %></p>
        <%= link_to "Back", properties_path, class: "btn btn-outline-primary" %>
      </div>
    </div>

    <div class="col-md-4 d-flex" data-controller="toggle">
      <div class="bg-white p-4 shadow-sm rounded w-100 align-self-start">
          <button data-action="click->toggle#fire" type="button" class="btn btn-primary">Book Now</button>
        <div data-toggle-target="bookingForm" class="d-none">
          <%= render "bookings/form" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div
  data-controller="map"
  data-map-api-key-value="<%= Rails.application.credentials.dig(:mapbox, :api_key) %>"
  data-map-markers-value='<%= @markers.to_json.html_safe %>'
  style="width: 100%; height: 300px;">
</div>
