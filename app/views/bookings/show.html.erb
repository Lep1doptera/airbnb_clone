<h1>My Booking Details</h1>

<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title"><%= @booking.property.property_address %></h5>
    <p class="card-text"><strong>Check-in:</strong> <%= @booking.check_in_date %></p>
    <p class="card-text"><strong>Check-out:</strong> <%= @booking.check_out_date %></p>
    <p class="card-text"><strong>Guests:</strong> <%= @booking.number_of_guests %></p>
    <p class="card-text"><strong>Status:</strong> <%= @booking.booking_status %></p>

    <div data-controller="dialog">
      <dialog data-dialog-target="dialog">
        <h5>Confirm Cancellation</h5>
        <p>Are you sure?</p>

        <%= form_with url: booking_path(@booking), method: :delete do %>
          <%= submit_tag "Yes, Cancel Booking", class: "btn btn-danger" %>
        <% end %>

        <button type="button" class="btn btn-secondary mt-2" data-action="dialog#close">Nevermind</button>
      </dialog>

      <button type="button" class="btn btn-danger mt-3" data-action="dialog#open">Cancel Booking</button>
    </div>

    <%= link_to 'Back to My Bookings', bookings_path, class: "btn btn-secondary mt-3 ms-2" %>
  </div>
</div>
