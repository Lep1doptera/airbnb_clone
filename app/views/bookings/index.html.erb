<h1>My Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Property</th>
      <th>Check-in</th>
      <th>Check-out</th>
      <th>Guests</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= link_to booking.property.property_address, property_path(booking.property) %></td>
        <td><%= booking.check_in_date %></td>
        <td><%= booking.check_out_date %></td>
        <td><%= booking.number_of_guests %></td>
        <td><%= booking.booking_status %></td>
        <td>
          <%= link_to 'View', booking_path(booking), class: 'btn btn-sm btn-secondary' %>
          <%= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to cancel this booking?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
