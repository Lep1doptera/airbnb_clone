<!DOCTYPE html>
<html>
  <head>
    <title>AirbnbClone</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  </head>

  <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary px-4">
      <a class="navbar-brand" href="<%= root_path %>">Airbnb</a>

      <div class="ms-auto">
        <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-dark' %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-dark' %>
        <% end %>
      </div>
    </nav>
    <% flash.each do |key, message| %>
  <% alert_class = case key.to_sym
      when :notice then "alert-success"
      when :alert  then "alert-danger"
      else "alert-info"
      end %>
  <div data-controller="flash" class="alert <%= alert_class %> alert-dismissible fade show m-3" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
